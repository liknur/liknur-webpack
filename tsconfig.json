{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "declaration": true,
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["./src/*.ts"]
    }
  },
  "include": ["src"]
}

